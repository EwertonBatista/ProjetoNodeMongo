{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
    
{{/each}}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Nova Postagem</h3>
        <form action="/admin/postagens/nova" method="post">

            <label for="name">Titulo</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control" required>

            <label for="categoria">Selecione uma categoria disponivel</label>
            <select class="custom-select" name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>

            <label for="conteudo">Conteudo:</label>

            <textarea name="conteudo" id="" cols="30" rows="10" required class="form-control"></textarea>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
            </div>

        </form>
    </div>
</div>