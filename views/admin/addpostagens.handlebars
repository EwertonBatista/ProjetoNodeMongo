{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
    
{{/each}}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Nova Postagem</h3>
        <form action="/admin/postagens/nova" method="post">

            <label for="name">Titulo</label>
            <input type="text" name="titulo" id="titulopostagem" class="form-control" required>
            <label for="slug">Slug</label>
            <input type="text" name="slug" id="slugpostagem" class="form-control" required>
            <label for="descricao">Descri√ß√£o</label>
            <input type="text" name="descricao" id="descricaopostagem" class="form-control" required>

            <label for="categoria">Selecione uma categoria disponivel</label>
            <select class="custom-select" name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>

            <label for="conteudo">Conteudo:</label>

            <textarea name="conteudo" id="textareapostagem" cols="30" rows="10" class="form-control" required></textarea>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success mt-3" onclick="criarpostagem(event)" type="submit">Criar postagem</button>
                <button type="submit" id="enviarpostagem" style="display:none"></button>
            </div>

        </form>
    </div>
</div>

<script>
   
   function criarpostagem(event){

            titulipostagem = document.getElementById('titulopostagem').value
            slugpostagem = document.getElementById('slugpostagem').value
            descricaopostagem = document.getElementById('descricaopostagem').value
            textareapostagem = document.getElementById('textareapostagem').value


            event.preventDefault();
            if(!titulopostagem || !slugpostagem || !descricaopostagem || !textareapostagem){
                Swal.fire(
                    'J√° preencheu todos os dados?',
                    'üòê',
                    'question'
                    )
            }else{
                Swal.fire(
                    'Postagem criada!',
                    'ü§ó',
                    'success'
                    )

                setTimeout(function(){
                document.getElementById('enviarpostagem').click();
                }, 1500)

            }
   }
  
</script>